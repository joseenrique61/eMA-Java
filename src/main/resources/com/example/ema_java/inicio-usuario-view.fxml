<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="lbNombre"/>
    <Button text="Nuevo paciente" onMouseClicked="#onNuevoPacienteClicked"/>
    <Label text="Seleccionar paciente:"/>
    <ComboBox fx:id="cbPacientes"/>
    <Button text="Nueva historia" fx:id="bNuevaHistoria" visible="false" onMouseClicked="#onNuevaHistoriaClicked"/>
    <Label fx:id="lbHistoria" text="Leer historia:" visible="false"/>
    <ComboBox fx:id="cbHistorias" visible="false"/>
</VBox>
