<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Registrar usuario"/>

    <Label text="Nombre de usuario:"/>
    <TextField fx:id="tUsuario"/>
    <Label text="Contraseña:"/>
    <PasswordField fx:id="pwContrasena"/>
    <Label text="Repita la contraseña:"/>
    <PasswordField fx:id="pwRepetirContrasena"/>
    <Separator/>
    <Label text="Nombre:"/>
    <TextField fx:id="tNombre"/>
    <Label text="Cédula:"/>
    <TextField fx:id="tCedula"/>
    <Label text="Especialidad:"/>
    <TextField fx:id="tEspecialidad"/>

    <Label fx:id="errorLabel" visible="false"/>
    <Button text="Crear usuario" onAction="#onCrearUsuarioButtonClick"/>
</VBox>
